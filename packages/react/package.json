{
  "name": "@go-ui/react",
  "sideEffects": false,
  "version": "0.0.0-development",
  "description": "React specific wrapper for @go-ui/core",
  "repository": {
    "type": "git",
    "url": "https://github.com/getgoui/go-ui"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run compile && pnpm run cpyCss",
    "clean": "rm -rf dist",
    "compile": "pnpm run tsc",
    "tsc": "tsc -p .",
    "rollup": "rollup -c",
    "cpyCss": "cpy \"node_modules/@go-ui/core/dist/go-ui/go-ui.css\" \"dist\" --flat"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@go-ui/core": "workspace:0.0.0-development",
    "@types/jest": "23.3.9",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "cpy-cli": "^4.2.0",
    "jest": "^23.0.0",
    "jest-dom": "^3.0.2",
    "np": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.8.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  }
}
