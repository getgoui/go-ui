{
  "name": "go-ui-root",
  "workspaces": [
    "packages/core",
    "packages/react",
    "packages/vue"
  ],
  "scripts": {
    "dev": "concurrently --kill-others \"npm:watch.*\"",
    "watch.core": "nx build @go-ui/core -- --watch",
    "watch.ia": "nx watch.ia @go-ui/docs",
    "watch.docs": "nx start @go-ui/docs",
    "dev.core": "nx start @go-ui/core",
    "dev.docs": "nx build @go-ui/core && concurrently --kill-others \"npm:watch.ia\" \"nx start @go-ui/docs\"",
    "dev.react.app": "nx start @go-ui/react-starter",
    "dev.vue.app": "nx dev @go-ui/vue-starter",
    "build.libs": "pnpm --stream -r --filter \"./packages/**\" build",
    "build.docs": "nx build @go-ui/docs",
    "build.ia": "nx build.ia @go-ui/docs",
    "build.affected": "nx affected:build",
    "test.spec.watch": "nx test.spec.watch @go-ui/core",
    "test.spec": "nx test.spec @go-ui/core",
    "test.e2e.watch": "nx test.e2e.watch @go-ui/core",
    "test.e2e": "nx test.e2e @go-ui/core",
    "release": "pnpm run --stream -r --filter \"./packages/**\" release && release-it",
    "gg": "node ./bin/index.js"
  },
  "devDependencies": {
    "@release-it/bumper": "^4.0.2",
    "@release-it/conventional-changelog": "^5.1.1",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "concurrently": "^6.5.1",
    "cpr": "^3.0.1",
    "esm": "^3.2.25",
    "lodash.camelcase": "^4.3.0",
    "lodash.debounce": "^4.0.8",
    "lodash.kebabcase": "^4.1.1",
    "minimist": "^1.2.6",
    "nanospinner": "^1.1.0",
    "nx": "14.6.5",
    "prompts": "^2.4.2",
    "release-it": "^15.11.0"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}